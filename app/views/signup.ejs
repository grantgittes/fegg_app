<% include _header %>
<div class="alert alert-danger alert-dismissible fade show" role="alert"  id="login-err">
  <center><%= msg %></center>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="container" id="signup-container" style="max-width:100%;">
  <div class="row justify-content-md-center">
    <div class="col-sm-12" style="text-align:center;">
      <h1>Sign up</h1>
    </div>
  <div class="card col-sm-5" style="margin-bottom: 2%; max-width:100%;">
    <div class="card-body">
  <form action="/signup" method="post" id="signup-form">
    <div class="row justify-content-md-center" style="margin-bottom:2%;">
      <div class="col-sm-4">
        <label for="username">Username:</label>
      </div>
      <div class="col-sm-8">
        <input name="username" type="text" class="form-control"
        placeholder="Username" required autofocus>
      </div>
      <div class="col-sm-12" id="uname-t" style="text-align:center">
        
      </div>
    </div>
    <div class="row justify-content-md-center" style="margin-bottom:2%">
      <div class="col-sm-4">
        <label for="password">Password:</label>
      </div>
      <div class="col-sm-8">
        <input name="password" type="password" class="form-control"
        placeholder="Password" required>
      </div>
      <div class="col-sm-12" id="pwd-t" style="text-align:center;">
        
      </div>
    </div>
    <div class="row justify-content-md-center" style="margin-bottom:2%;">
      <div class="col-sm-4">
        <label for="email">Email:</label>
      </div>
      <div class="col-sm-8">
        <input name="email" type="email" class="form-control"
        placeholder="abcd@1234.com" pattern="^[a-zA-Z0-9_-]+@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$" required>
      </div>
      <div class="col-sm-12" id="email-t" style="text-align:center;">
        
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-sm-8">
        <button type="button" class="btn btn-sm btn-secondary" onclick="github_login()">
          <svg class="octicon octicon-mark-github v-align-middle" height="32" viewBox="0 0 16 16" version="1.1" width="32" aria-hidden="true">
            <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z">
            </path>
          </svg>
          Sign in with Github
        </button>
      </div>
      <div class="col-sm-4">
        <input type="submit" value="Sign up" class="btn btn-primary btn-block" disabled id="submit-signup">
      </div>
    </div>
  </form>      
    </div>
  </div>
  </div>

</div>

<% include _footer %>